<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="CommentAppraisalMapper">

	<!-- Beans 클래스의 객체이름(id)과 클래스이름(type)을 명시한다. -->
	<resultMap id="CommentAppraisalMap"
		type="study.spring.clip.model.CommentAppraisal">
		<!-- Beans의 멤버변수(property)이름과 대상 테이블의 컬럼(column)을 연결한다. -->
		<result property="appraisal_no" column="appraisal_no" />
		<result property="answer" column="answer" />
		<result property="user_no" column="user_no" />
		<result property="movie_comment_no" column="movie_comment_no " />
	</resultMap>

	<!-- 조회 -->
	<select id="oneCommentAppraisal"
		parameterType="study.spring.clip.model.CommentAppraisal"
		resultMap="CommentAppraisalMap">
		SELECT * FROM comment_appraisal WHERE user_no = #{user_no};
	</select>

	<!-- 삽입 -->
	<insert id="insertCommentAppraisal"
		parameterType="study.spring.clip.model.CommentAppraisal"
		useGeneratedKeys="true" keyProperty="appraisal_no">
		INSERT INTO comment_appraisal
		(answer, user_no,movie_comment_no)
		VALUES (#{answer}, #{user_no},
		#{movie_comment_no});
	</insert>

	<!-- 업뎃 -->
	<update id="updateCommentAppraisal"
		parameterType="study.spring.clip.model.CommentAppraisal">
		UPDATE comment_appraisal
		SET answer = #{answer} 
		WHERE user_no = #{user_no} and movie_comment_no = #{movie_comment_no};
	</update>
	
	<!-- user_no null처리 -->
	<update id="nullList"
		parameterType="study.spring.clip.model.CommentAppraisal">
		UPDATE comment_appraisal SET user_no=null WHERE user_no=#{user_no};
	</update>
	
	<!-- 좋아요 라이크개수 -->
	<select id="GoodComment" parameterType="study.spring.clip.model.CommentAppraisal"
        resultType="int">
        SELECT COUNT(movie_like_yes) FROM movie_like
        WHERE movie_comment_no = #{movie_comment_no};
    </select>
    
    <!-- 싫어요 라이크개수 -->
	<select id="BadComment" parameterType="study.spring.clip.model.CommentAppraisal"
        resultType="int">
        SELECT COUNT(movie_like_no) FROM movie_like
        WHERE movie_comment_no = #{movie_comment_no};
    </select>
</mapper>